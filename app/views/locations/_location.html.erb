<div id="<%= dom_id location %>" class=" p-6">
  <div class="mb-6">
    <h2 class="text-2xl font-bold mb-2"><%= location.name %></h2>
    <p class="text-gray-600"><%= location.formatted_address %></p>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <p class="text-sm text-gray-500">Coordinates</p>
      <p class="">
        <%= location.latitude %>, <%= location.longitude %>
      </p>
    </div>
  </div>

  <div class="mt-4 pt-4 border-t border-gray-200 text-sm text-gray-500">
    <p>Samsara ID: <%= location.samsara_id %></p>
  </div>
</div>
