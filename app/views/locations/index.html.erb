<% content_for :title, "Locations" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Locations</h1>

    <div class="flex items-center gap-2">
      <%= link_to "Fetch", fetch_locations_path, class: "rounded-md px-3.5 py-2.5 bg-gray-600 hover:bg-gray-500 text-white block font-medium" %>
    <%= link_to "New location", new_location_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>
  </div>

  <div id="locations" class="min-w-full">
    <% if @locations.any? %>
      <% @locations.each do |location| %>
        <div class="flex justify-between items-center py-4 border-b">
          <div class="flex-1">
            <div class="font-medium"><%= location.name %></div>
            <div class="text-sm text-gray-500"><%= location.formatted_address %></div>
            <div class="text-xs text-gray-400">
              <%= location.latitude %>, <%= location.longitude %>
            </div>
          </div>
          <%= link_to "View", location, class: "rounded-md px-3 py-1.5 bg-gray-100 hover:bg-gray-50 text-sm font-medium" %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No locations found.</p>
    <% end %>
  </div>
</div>
