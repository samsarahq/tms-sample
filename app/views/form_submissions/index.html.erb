<% content_for :title, "Form submissions" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Form submissions</h1>
    <%= link_to "New form submission", new_form_submission_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="form_submissions" class="min-w-full">
    <% if @form_submissions.any? %>
      <% @form_submissions.each do |form_submission| %>
        <%= render form_submission %>
        <p>
          <%= link_to "Show this form submission", form_submission, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No form submissions found.</p>
    <% end %>
  </div>
</div>
