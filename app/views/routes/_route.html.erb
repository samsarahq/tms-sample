<div id="<%= dom_id route %>">
  <h2 class="text-2xl font-bold mb-4">
    <%= route.name %>
  </h2>

  <div class="grid grid-cols-2 gap-6">
    <div>
      <h3 class="text-lg font-semibold mb-3">Schedule</h3>
      <p class="mb-2">
        <strong class="block font-medium text-gray-600">Scheduled start:</strong>
        <%= route.scheduled_start_time %>
      </p>
      <p class="mb-2">
        <strong class="block font-medium text-gray-600">Scheduled end:</strong>
        <%= route.scheduled_end_time %>
      </p>
      <p class="mb-2">
        <strong class="block font-medium text-gray-600">Actual start:</strong>
        <%= route.actual_start_time %>
      </p>
      <p class="mb-2">
        <strong class="block font-medium text-gray-600">Actual end:</strong>
        <%= route.actual_end_time %>
      </p>
    </div>

    <div>
      <h3 class="text-lg font-semibold mb-3">Details</h3>
      <p class="mb-2">
        <strong class="block font-medium text-gray-600">Samsara ID:</strong>
        <%= route.samsara_id %>
      </p>
      <p class="mb-2">
        <strong class="block font-medium text-gray-600">Driver:</strong>
        <%= route.driver&.name %>
      </p>
      <p class="mb-2">
        <strong class="block font-medium text-gray-600">Vehicle:</strong>
        <%= route.vehicle&.name %>
      </p>
      <p class="mb-2">
        <strong class="block font-medium text-gray-600">Settings:</strong>
        <%= route.settings %>
      </p>
    </div>
  </div>
</div>
