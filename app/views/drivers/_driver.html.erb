<div id="<%= dom_id driver %>" class="space-y-4">
  <div>
    <h2 class="text-2xl font-bold"><%= driver.name %></h2>
    <div class="text-lg"><%= driver.phone_number&.phony_formatted %></div>
  </div>

  <div class="flex items-center gap-2">
    <div class="text-sm font-medium"><%= driver.username %></div>
    <span class="px-2 py-1 text-sm font-medium rounded-full <%= driver.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
      <%= driver.status.titleize %>
    </span>
  </div>

  <div class="text-sm text-gray-500">
    Samsara ID: <%= link_to driver.samsara_id, "https://cloud.samsara.com/o/4007512/fleet/config/drivers?view=active", target: "_blank" %>
  </div>
</div>
