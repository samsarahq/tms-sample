<% content_for :title, "Trailers" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Trailers</h1>
    <div class="flex gap-2">
      <%= link_to "Fetch", fetch_trailers_path, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 text-black block font-medium" %>
      <%= link_to "New trailer", new_trailer_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>
  </div>

  <div id="trailers" class="min-w-full">
    <% if @trailers.any? %>
      <% @trailers.each do |trailer| %>
        <%= render trailer %>
        <p>
          <%= link_to "Show this trailer", trailer, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No trailers found.</p>
    <% end %>
  </div>
</div>
