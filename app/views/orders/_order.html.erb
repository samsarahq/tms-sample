<div id="<%= dom_id order %>" class="bg-white p-6">
  <div class="flex justify-between items-start mb-6">
    <div>
      <span class="px-3 py-1 text-sm font-medium rounded-full
        <%= case order.status
            when 'pending'
              'bg-yellow-100 text-yellow-800'
            when 'in_progress'
              'bg-blue-100 text-blue-800'
            when 'completed'
              'bg-green-100 text-green-800'
            else
              'bg-gray-100 text-gray-800'
            end %>">
        <%= order.status.titleize %>
      </span>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <p class="text-gray-600 mb-1">
        <strong>Pickup:</strong> <%= link_to order.from_location.name, location_path(order.from_location), class: "text-blue-600 hover:text-blue-800" %>
      </p>
      <p class="text-gray-600">
        <%= order.requested_pickup_at.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
    </div>

    <div>
      <p class="text-gray-600 mb-1">
        <strong>Delivery:</strong> <%= link_to order.to_location.name, location_path(order.to_location), class: "text-blue-600 hover:text-blue-800" %>
      </p>
      <p class="text-gray-600">
        <%= order.requested_delivery_at.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
    </div>
  </div>

  <% if order.description.present? %>
    <div class="mt-6">
      <h3 class="font-medium text-gray-900 mb-2">Description</h3>
      <p class="text-gray-600"><%= order.description %></p>
    </div>
  <% end %>
</div>
